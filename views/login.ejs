<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="google-signin-client_id" content="713652147420-gkmaie92tun450jie71t1hdsvqod4505.apps.googleusercontent.com">
    <script src="https://accounts.google.com/gsi/client" async defer></script>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <!-- External CSS -->
    <link rel="stylesheet" type='text/css' href="\css\styles.css">

    <title>Login</title>

</head>

<body>
    <div class="container">
        <br>
        <div style="background-color: white;">
            <br>
            <div class="row">
                <div class="col-sm-4 text-center">
                    <img src="\images\logo.png" alt="logo">
                </div>
                <div class="col-sm-8 text-center">
                    <br><br>
                    <h1>Academic Request System</h1>
                    <h2>IIT Gandhinagar</h2>
                </div>
            </div>
            <br>
        </div>
        <br><br>
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6"style="border:solid" >
                <div style="padding-top:10px;padding-bottom: 10px;"><h4>Sign In Required</h4></div>
                <h6>
                    Please sign in with an IIT Gandhinagar account to continue
                </h6>
                <div class="d-flex justify-content-center align-items-center" style="padding-top:20px;padding-bottom: 20px;">
                    <div id="g_id_onload"
                    data-client_id="713652147420-gkmaie92tun450jie71t1hdsvqod4505.apps.googleusercontent.com"
                    data-callback="onSignIn"
                    data-auto_prompt="false">
                    </div>
                    <div class="g_id_signin"
                        data-type="standard"
                        data-size="large"
                        data-theme="outline"
                        data-text="sign_in_with"
                        data-shape="rectangular"
                        data-logo_alignment="left">
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
        <br><br>
    </div>

    <script>
        function onSignIn(googleUser) {

            var id_token = googleUser.credential;
            var xhr = new XMLHttpRequest();
            xhr.open('POST', '/login');
            xhr.setRequestHeader('Content-Type', 'application/json');
            xhr.onload = function () {
                console.log('Signed in as: ' + xhr.responseText);
                if (xhr.responseText == 'success') {
                    location.assign('/request');
                }
            };
            xhr.send(JSON.stringify({ token: id_token }));
        }
    </script>
</body>

</html>